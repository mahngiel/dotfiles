execute pathogen#infect()

syntax on

set background=dark
colorscheme solarized

set nocompatible
set nowrap
set history=500
set ruler
set laststatus=2
set number
set t_Co=256

set tabstop=4
set shiftwidth=4
set autoindent
set smartindent

set expandtab
set smarttab

set hlsearch
set showmatch
set ignorecase
set smartcase

inoremap jj <ESC> ^

filetype plugin indent on
